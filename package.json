{
  "name": "mission-control",
  "version": "2.5.0",
  "description": "Mission Control - Jamie's Second Brain",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "build:electron": "npm run build && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.mission-control.app",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "coloredmetalproducts",
      "repo": "mission-control"
    }
  },
  "dependencies": {
    "date-fns": "^3.3.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.563.0",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  }
}
